<h1>Eat-a-burger</h1>


<img src="assets/images/burger.gif" alt="">

<div id="burgerSection">

    <h2>Burgers to be eaten!</h2>

    <ul class="text-center">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}

  </ul>

  <h2> Burgers that have been devoured!</h2>

  <ul class="text-center">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
  </ul>

</div>




<h2> Add a burger </h2>

<form id="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
