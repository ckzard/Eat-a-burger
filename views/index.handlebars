<h1>Eat-a-burger</h1>


<img src="assets/images/burger.gif" alt="">

<h2> Add a burger </h2>

<form id="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>

<div id="burgerSection">

    <h2>Burgers to be eaten!</h2>
  <div id="aliveBurgers">
    <ul class="text-center">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
  </ul>
  </div>
    

  <h2> Burgers that have been devoured!</h2>
  <div id="devouredBurgers">
      <ul class="text-center">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
  

</div>





